{
  "name": "node-systray-v2",
  "version": "2.0.0",
  "description": "A cross-platform systray library for node.js with precompiled binaries.",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": [
      {
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      },
      "./dist/index.js"
    ]
  },
  "scripts": {
    "doc": "typedoc src/index.ts",
    "test": "jest",
    "lint": "eslint \"*/**/*.{ts,js,json}\"",
    "lint:fix": "eslint \"*/**/*.{ts,js,json}\" --fix",
    "build": "rimraf dist && rollup --config ./rollup.config.mjs",
    "prepublishOnly": "npm run doc && npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@types/chai": "^4.3.4",
    "@types/debug": "^0.0.30",
    "@types/eslint": "^8.4.10",
    "@types/fs-extra": "^4.0.2",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.18.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "chai": "^4.3.7",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^5.0.5",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "0.23.23",
    "typedoc-plugin-markdown": "3.14.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist/",
    "types/",
    "traybin/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edgar-P-Yan/node-systray-v2.git"
  },
  "keywords": [
    "systray",
    "tray",
    "gui"
  ],
  "author": {
    "name": "Edgar Pogosyan"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Edgar-P-Yan/node-systray-v2/issues"
  },
  "homepage": "https://github.com/Edgar-P-Yan/node-systray-v2#readme",
  "dependencies": {
    "debug": "^3.0.1",
    "fs-extra": "^4.0.2"
  }
}
